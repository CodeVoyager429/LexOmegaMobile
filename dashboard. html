  <script>
    const token = localStorage.getItem('lexomega_token');
    if (!token) {
      location.href = '/index.html#login-required';
    }

    async function bootstrap(){
      try{
        const me = await fetch('/api/auth/me', { headers:{Authorization:`Bearer ${token}`} }).then(r=>r.json()).catch(()=>null);
        const name = (me && me.user && (me.user.name || me.user.username)) || 'LexOmega User';
        document.getElementById('greeting').textContent = `Welcome, ${name}`;

        // Example KPIs — replace with your real endpoints when ready
        document.getElementById('kpiCases').textContent  = (me && me.user && me.user.casesCount)  || '12';
        document.getElementById('kpiDocs').textContent   = (me && me.user && me.user.docsCount)   || '34';
        document.getElementById('kpiAlerts').textContent = (me && me.user && me.user.alerts24h)   || '3';

        const list = document.getElementById('activity');
        list.innerHTML = '';
        ['Filed motion in Case #2025-14','Uploaded “NDA_v3.pdf”','New alert: Hearing scheduled 8/28'].forEach(item=>{
          const li=document.createElement('li'); li.textContent=item; list.appendChild(li);
        });
      }catch(_){ /* keep silent for now */ }
    }

    document.getElementById('logoutBtn').onclick = ()=>{
      localStorage.removeItem('lexomega_token');
      localStorage.removeItem('lexomega_user');
      location.href = '/index.html#logged-out';
    };

    bootstrap();
  </script>
