<body><header>⚖️ LexOmega Mock Trial Courtroom</header><div class="courtroom">
  <div class="role" onclick="simulateRole('👩‍⚖️ Judge')">👩‍⚖️ Judge</div>
  <div class="role" onclick="simulateRole('👨‍💼 Lawyer')">👨‍💼 Lawyer</div>
  <div class="role" onclick="simulateRole('🧑‍⚖️ Jury')">🧑‍⚖️ Jury</div>
  <div class="role" onclick="simulateRole('🧍‍♂️ Plaintiff')">🧍‍♂️ Plaintiff</div>
  <div class="role" onclick="simulateRole('🧍‍♀️ Defendant')">🧍‍♀️ Defendant</div>
</div><div class="interaction-box" id="courtroomOutput">
  Click on a role above to simulate interaction.
</div><button class="return-btn" onclick="goHome()">🏠 Return to Home</button>

<script>
  function simulateRole(role) {
    const output = document.getElementById('courtroomOutput');
    switch(role) {
      case '👩‍⚖️ Judge':
        output.textContent = "👩‍⚖️ Judge: Order in the court! Let's begin the trial.";
        break;
      case '👨‍💼 Lawyer':
        output.textContent = "👨‍💼 Lawyer: Your Honor, I present Exhibit A as evidence.";
        break;
      case '🧑‍⚖️ Jury':
        output.textContent = "🧑‍⚖️ Jury: We will deliberate and return a verdict soon.";
        break;
      case '🧍‍♂️ Plaintiff':
        output.textContent = "🧍‍♂️ Plaintiff: I believe my rights were violated and seek justice.";
        break;
      case '🧍‍♀️ Defendant':
        output.textContent = "🧍‍♀️ Defendant: I deny all allegations presented against me.";
        break;
      default:
        output.textContent = "Role not recognized.";
    }
  }

  function goHome() {
    window.location.href = 'index.html';
  }
</script></body>
</html>
